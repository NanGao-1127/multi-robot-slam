<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find robot_description)/urdf/common_inertial.xacro"/>
    
    <xacro:macro name="wheel_xacro" params="prefix:='' wheel_name xyz">
        <link name="${prefix}${wheel_name}_link">
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.032" length="0.04"/>
                </geometry>
                <material name="${prefix}black">
                    <color rgba="0.0 0.0 0.0 0.8"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.032" length="0.04"/>
                </geometry>
            </collision>
            <xacro:cylinder_inertia m="0.05" r="0.032" h="0.04"/>
        </link>
        
        <joint name="${prefix}${wheel_name}_joint" type="continuous">
            <parent link="${prefix}base_link"/>
            <child link="${prefix}${wheel_name}_link"/>
            <origin xyz="${xyz}" rpy="0.0 0.0 0.0"/>
            <axis xyz="0 1 0"/>
        </joint>
        
        <gazebo reference="${prefix}${wheel_name}_link">
            <mu1 value="20.0"/>
            <mu2 value="20.0"/>
            <kp value="1000000.0"/>
            <kd value="1.0"/>
            <material>Gazebo/Black</material>
        </gazebo>
    </xacro:macro>
</robot>
