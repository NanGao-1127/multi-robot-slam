<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find robot_description)/urdf/common_inertial.xacro"/>
    
    <xacro:macro name="imu_xacro" params="prefix:='' xyz">
        <link name="${prefix}imu_link">
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <box size="0.02 0.02 0.02"/>
                </geometry>
                <material name="${prefix}imu_blue">
                    <color rgba="0.0 0.0 0.8 0.8"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <box size="0.02 0.02 0.02"/>
                </geometry>
            </collision>
            <xacro:box_inertia m="0.01" w="0.02" h="0.02" d="0.02"/>
        </link>
        
        <joint name="${prefix}imu_joint" type="fixed">
            <parent link="${prefix}base_link"/>
            <child link="${prefix}imu_link"/>
            <origin xyz="${xyz}" rpy="0.0 0.0 0.0"/>
        </joint>
        
        <gazebo reference="${prefix}imu_link">
            <material>Gazebo/Blue</material>
        </gazebo>
    </xacro:macro>
</robot>
